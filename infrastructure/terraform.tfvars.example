# Copy to terraform.tfvars and fill in values.
# terraform.tfvars is gitignored — NEVER commit secrets.
#
# Auth: set VERDA_CLIENT_ID and VERDA_CLIENT_SECRET as env vars.
#
# Environment isolation (#71):
#   "prod"    → comfyume-vca-ftv-*       (production, PROD_SFS)
#   "test"    → comfyume-test-vca-ftv-*  (testing-009, CLONE_SFS)
#   "staging" → comfyume-staging-vca-ftv-* (staging, CLONE_SFS)
environment = "prod"

# Required — Verda shared volume ID for SFS (models, outputs, cache)
# PROD: be539393-4946-42fa-9adf-d72fe62cded7 (PROD_SFS-Model-Vault-22-Jan-01)
# CLONE: fd7efb9e-762a-47e4-a2a4-a9ee1a0bd338 (CLONE_SFS-Model-Vault-16-Feb)
sfs_volume_id = "REPLACE_ME"

# Hugging Face token for gated model access (e.g. Flux)
hf_token = ""

# Container image
worker_image = "ghcr.io/ahelme/comfyume-worker:v0.11.0"

# Which deployments to create (all 4 exist in production)
deploy_h200_spot      = true
deploy_h200_on_demand = true
deploy_b300_spot      = true
deploy_b300_on_demand = true

# Scaling (matches live production values)
min_replicas     = 0      # 0 = scale to zero when idle
max_replicas     = 10
scale_down_delay = 300    # seconds before scaling down idle replica
request_ttl      = 36000  # max request lifetime in seconds
